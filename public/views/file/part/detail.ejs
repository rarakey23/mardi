<div class="modal-body">
  <div class="card">
    <% if(file.type=='image'){ %>
    <a href="<%- `/storage/${file.name}` %>" target="_blank">
      <img src="<%- `/storage/${file.name}` %>" class="w-100" alt="...">
    </a>
    <% }else if(file.type=='video'){ %>
    <a href="<%- `/storage/${file.name}` %>" target="_blank">
      <video width="100%" height="100%" controls>
        <source src="<%- `/storage/${file.name}` %>" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </a>
    <% }else if(file.type=='audio'){ %>
    <a href="<%- `/storage/${file.name}` %>" target="_blank">
      <div style="height: 10rem; " class="d-flex align-items-center text-center justify-content-center">
        <audio controls>
          <source src="<%- `/storage/${file.name}` %>" type="audio/mpeg">
          Your browser does not support the audio element.
        </audio>
      </div>
    </a>
    <% }else{ %>
    <a href="<%- `/storage/${file.name}` %>" target="_blank">
      <div style="height: 10rem; background-color: #f8f8f8;" class="d-flex align-items-center text-center justify-content-center">
        <img src="/assets/images/doc.png" alt="">
      </div>
    </a>
    <% } %>
  </div>
  <table>
    <tr>
      <td>Name File </td>
      <td>: <%- file.name %></td>
    </tr>
    <tr>
      <td>Type </td>
      <td>: <%- file.type %></td>
    </tr>
    <tr>
      <td>ext </td>
      <td>: <%- file.ext %></td>
    </tr>
    <tr>
      <td>size </td>
      <td>: <%- file.size %></td>
    </tr>
    <tr>
      <td>created </td>
      <td>: <%- file.date %></td>
    </tr>
  </table>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-outline-danger" onclick='___delete_file("<%- file.name %>")'>Delete</button>
</div>